<&HTML-AND-JAVASCRIPT(.css)>

    <head>
      <title><.title></title>
    </head>
    <nav class="panel container is-fluid is-primary">
      <p class="panel-heading">Welcome to SparkyCI</p>
      <&HTML-AND-JAVASCRIPT(.navbar)>
      <?.message>
        <div class="panel-block">
          <p class="control">
            <span>[ok] <.message></span>
          </p>
        </div>
      </?>
        <div class="panel-block">
          <p>
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th><abbr title="Project">Project</abbr></th>
                <th>Status</th>
                <th>Date</th>
                <th><abbr title="Report">Report</abbr></th>
              </tr>
            </thead>
            <tbody>
            <@results>
              <tr>
                <td><.id></td>
                <td><.project></td>
                <td><.state></td>
                <td><.date></td>
                <td><a href="/report/<.id>" title="report">link</td>
              </tr>
            </@>
            </tbody>
          </table>
          </p>
        </div>
      </nav>
    </div>
  </section>    
  </body>
</html>
